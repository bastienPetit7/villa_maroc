{% extends 'base_admin.html.twig' %}

{% block title %}Property{% endblock %}

{% block body %}
    
<div class="row mb-4 mt-3">
    <div class="col-12 d-flex justify-content-between">
        <h1>Détail de la propriété</h1>
        <a href=" {{path('admin_property_edit', {id : property.id})}} " class="btn btn-primary btn-lg d-none d-md-block">Modifier</a>
    </div>
</div>

<div class="row">

    <div class="col-md-6 ">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="account" role="tabpanel">

                <div class="card">
                    <div class="card-header">
                        
                        <h5 class="h3 mb-0">Image principale de la propriété</h5>
                    </div>
                    <div class="card-body position-relative d-flex justify-content-center m-md-4 m-2 "style="height:400px;" >
                        
                        <img src="{{ asset(property.mainPicture)}}" style="position: absolute;
                                                                                top: 0;
                                                                                left: 0;
                                                                                right: 0;
                                                                                bottom: 0;
                                                                                width: 100%;
                                                                                height: 100%;
                                                                                object-fit: cover ;" alt="">

                    </div>
                </div>
                	
                <div class="card">
                    <div class="card-header">
                        <h5 class="h3">Toutes les images de la propriété</h5>
                    </div>
                    <div class="card-body pt-0">

                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">

                                <div class="carousel-item active">
                                    <img class="d-block " src="{{ asset(property.mainPicture)}}"  alt="Unsplash">
                                </div>
                                
                                {% for image in property.images %}
                                <div class="carousel-item ">
                                    <img class="d-block w-100" src="{{ asset(image.title)}}"    alt="Unsplash">
                                </div>

                                {% endfor %}
                                
                               
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
                {# Calendar #}
                <div class="card">
                    <div class="card-header">
                        <h5 class="h3">Planing de réservation</h5>
                    </div>
                    <div class="card-body">
        
                        <div id="calendar"></div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>

    <div class="col-md-6 ">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="account" role="tabpanel">

                    <div class="card">
                        <div class="card-header">
                                
                                <h5 class="h3 mb-0">Description</h5>
                        </div>
                        <div class="card-body text-center pb-4 p-2 ">
                            
                            {{property.description | raw}} 

                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header">
                                
                                <h5 class="h3 mb-0">Short description</h5>
                        </div>
                        <div class="card-body text-center pb-4 p-2 ">
                            
                            {{property.shortDescription | raw}} 

                        </div>
                    </div>

                <div class="row">

                     <div class="col-md-6 ">
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="account" role="tabpanel">

                                <div class="card">
                                    <div class="card-header">
                                        
                                        <h5 class="h3 mb-0">Nom de la propriété</h5>
                                    </div>
                                    <div class="card-body text-center pb-4 p-2 ">
                                        
                                        {{property.title}} 

                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header">
                                        
                                        <h5 class="h3 mb-0">Nombre de piéces</h5>
                                    </div>
                                    <div class="card-body text-center pb-4 p-2 ">
                                        
                                        {{property.rooms}} piéces

                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header">
                                        
                                        <h5 class="h3 mb-0">Surface de la propriété</h5>
                                    </div>
                                    <div class="card-body text-center pb-4 p-2 ">
                                        
                                        {{property.surface}} m2

                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header">
                                        
                                        <h5 class="h3 mb-0">Prix de la location</h5>
                                    </div>
                                    <div class="card-body text-center pb-4 p-2 ">
                                        
                                        {{property.price | amount}} /semaine

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 ">
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="account" role="tabpanel">

                                
                                

                                <div class="card">
                                    <div class="card-header">
                                        
                                        <h5 class="h3 mb-0">Nombre de chambres</h5>
                                    </div>
                                    <div class="card-body text-center pb-4 p-2 ">
                                        
                                        {{property.bedrooms}} chambres

                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header">
                                        
                                        <h5 class="h3 mb-0">Nbr de salles de bains</h5>
                                    </div>
                                    <div class="card-body text-center pb-4 p-2 ">
                                        
                                        {{property.bathrooms}} salles de bains

                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header">
                                        
                                        <h5 class="h3 mb-0">Nombre de voyageurs</h5>
                                    </div>
                                    <div class="card-body text-center pb-4 p-2 ">
                                        
                                        {{property.guests}} voyageurs

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>

   

</div>



    {# {{ include('admin_property/_delete_form.html.twig') }} #}
{% endblock %}
{% block js %}

        <script>

        window.onload= () => {
        let calendarEl = document.getElementById('calendar');
        let calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth', 
        locale: 'fr',
        headerToolbar: {
                start: 'prev,next',
                center: 'title',
                end: 'dayGridMonth'
        }, 
        events: {{data | raw}}, 
        // editable: true, 
        // eventResizableFromStart: true, 
        });
        calendar.render();
        };

        </script>

{% endblock %}