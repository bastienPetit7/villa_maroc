{% extends 'base_admin.html.twig' %}

{% block title %}Property index{% endblock %}

{% block body %}

<div class="row">

    {% for property in properties %}
        
    

    <div class="col-md-4 col-xl-4">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="account" role="tabpanel">

                <div class="card">
                    <div class="card-header position-relative" style="height:200px;">

                            <img src="{{ asset(property.mainPicture)}}" style="position: absolute;
                                                                                top: 0;
                                                                                left: 0;
                                                                                right: 0;
                                                                                bottom: 0;
                                                                                width: 100%;
                                                                                height: 100%;
                                                                                object-fit: cover ;" alt="">
                        
                    </div>
                    <div class="card-body p-4 ">
                        <h3>{{property.title}}</h3><br>
                        {% if property.type == 0 %}
                            <p>Type : Villa </p>

                            {% else %}
                            <p>Type : Appartement</p>
                        {% endif %}
                        
                        <p>Ville : {{property.city}}</p>
                        <p>Surface : {{property.surface}} m2 </p>
                        <p>Prix : {{property.price | amount}} /semaine </p>

                        <a href="{{path('admin_property_show', {id : property.id })}}" class="btn btn-primary mb-0">Consulter</a>

                    </div>
                </div>
            </div>
        </div>
    </div>

    {% endfor %}

</div>
{% endblock %}
