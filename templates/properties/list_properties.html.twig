{% extends "base.html.twig" %}


{% block body %}








  <div class="container-fluid pt-5 pb-3 border-bottom px-lg-5">
        <div class="row">
          <div class="col-xl-8">
            <h1>Séjourner à Marrakech    </h1>
            <p class="lead text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi.</p>
          </div>
        </div>
      </div>
      <div class="container-fluid py-5 px-lg-5">
        <div class="row">
          
          <div class="col-lg-12">
            <div class="d-flex justify-content-between align-items-center flex-column flex-md-row mb-4">
              <div class="me-3">
                <p class="mb-3 mb-md-0"><strong>{{properties | length}}</strong> results found</p>
              </div>
              <div>
                <label class="form-label me-2" for="form_sort">Filtrer</label>
                <select class="selectpicker" name="sort" id="form_sort" data-style="btn-selectpicker" title="">
                  <option value="sortBy_0">Most popular   </option>
                  <option value="sortBy_1">Recommended   </option>
                  <option value="sortBy_2">Newest   </option>
                  <option value="sortBy_3">Oldest   </option>
                  <option value="sortBy_4">Closest   </option>
                </select>
              </div>
            </div>
            <div class="row">
              {% for property in properties %}
             
                <!-- place item-->
                <div class="col-sm-6 col-xl-4 mb-5 hover-animate" data-marker-id="59c0c8e33b1527bfe2abaf92">
                  <div class="card h-100 border-0 shadow">
                    <div class="card-img-top overflow-hidden gradient-overlay"> <img class="img-fluid w-100" src="{{asset(property.mainPicture)}}" style="object-fit:cover; height: 250px; " alt="Modern, Well-Appointed Room"/><a class="tile-link" href="{{path('show_property', {id : property.id})}}"></a>
                    </div>
                    <div class="card-body d-flex align-items-center">
                      <div class="w-100">
                        <h6 class="card-title"><a class="text-decoration-none text-dark" href="{{path('show_property', {id : property.id})}}">{{property.shortDescription | raw}}</a></h6>
                        <div class="d-flex card-subtitle mb-3">
                          <p class="flex-grow-1 mb-0 text-muted text-sm">{{property.bedrooms}} chambres</p>
                          
                        </div>
                        <p class="card-text text-muted"><span class="h4 text-primary">{{property.price | amount}}</span> per week</p>
                      </div>
                    </div>
                  </div>
                </div>
                 
              {% endfor %}
            </div>
           
          </div>
        </div>
      </div>
  </div>










{% include "shared/_footer.html.twig" %}

<!-- jQuery-->
        <script src="{{asset('front_theme/vendor/jquery/jquery.min.js')}}"></script>
 
{% endblock %}
